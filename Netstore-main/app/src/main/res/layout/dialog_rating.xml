<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/a"
        style="@style/AppTheme.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
        android:text="Reseña" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/restaurant_form_rating"
        style="@style/Widget.MaterialRatingBar.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a"

        android:layout_centerHorizontal="true"
        android:maxHeight="24dp"
        android:minHeight="24dp"
        android:translationY="6dp" />

    <EditText
        android:id="@+id/restaurant_form_text"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_form_rating"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Escribir una reseña..."
        android:translationY="6dp" />


    <Button
        android:id="@+id/restaurant_form_cancel"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_form_text"
        android:layout_toLeftOf="@+id/button1"
        android:text="Cancelar"
        android:textColor="@color/greySecondary"
        android:theme="@style/ThemeOverlay.FilterButton"
        android:translationY="3dp" />


    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/restaurant_form_text"
        android:layout_alignParentRight="true"
        android:text="Enviar"
        android:theme="@style/ThemeOverlay.FilterButton"
        android:translationY="4dp" />



</RelativeLayout>
